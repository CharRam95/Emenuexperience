Emenuexperience/
├── app.js                  // Archivo principal de tu app
├── package.json            // Configuraciones y dependencias
├── routes.js               // Rutas del sistema
├── README.md
│
├── views/                 // Archivos .ejs (HTML dinámico)
│   ├── login.ejs          // Pantalla de inicio de sesión
│   ├── panel.ejs          // Panel de usuario
│   └── layout.ejs         // Plantilla base (opcional)
│
├── public/                // Archivos estáticos (CSS, imágenes, JS)
│   ├── css/
│   │   └── styles.css     // Estilos personalizados
│   └── images/
│       └── logo.png       // Imágenes como logos o fondos
│
└── controllers/ (opcional para organizar lógica)
    └── userController.
js
<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Iniciar Sesión</h1>
  <form method="POST" action="/login">
    <input type="text" name="username" placeholder="Usuario">
    <input type="password" name="password" placeholder="Contraseña">
    <button type="submit">Entrar</button>
  </form>
</body>
</html>
